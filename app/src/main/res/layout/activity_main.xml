<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="none"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/modeChange"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
android:layout_marginRight="165dp"
        android:text="Enable dark mode"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:gravity="left"/>

    <TextView
        android:id="@+id/goodMorningText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/good_morning"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0016" />

    <ImageView
        android:id="@+id/hearts"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="0dp"
        style="@style/heart_background"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/grouphearts" />

    <ImageView
        android:id="@+id/grid"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="16dp"
        style="@style/cubes_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toEndOf="@+id/hearts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/groupmenu" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="117dp"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/searchicon">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Search"
            android:textColor="@color/black"
            android:textSize="13dp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- the Scrollview will be introduced below to allow other sections of the UI to slide
    below the textinput layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/inputlayout">

        <RelativeLayout
            android:id="@+id/introView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputlayout">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="123dp"
                app:srcCompat="@drawable/profilepics">

            </ImageView>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="141dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Jane"
                android:textAlignment="center"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/profileName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="121dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="121dp"
                android:fontFamily="@font/roboto_black"
                android:text="San Franciso CA, "
                android:textAlignment="center"
                android:textSize="13dp" />

            <Button
                android:id="@+id/followButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/address"
                android:layout_marginLeft="16dp"
                style="@style/follow_button"
android:backgroundTint="@color/black"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/montserrat"
                android:text="FOLLOW JANE"
                android:textFontWeight="900"
                android:textStyle="bold" />

            <Button
                android:id="@+id/messageButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/followButton"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:text="MESSAGE"

                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="13sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/picturelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/messageButton"
                android:layout_marginTop="43dp">

                <ImageView
                    android:id="@+id/imageone"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/firstpics" />

                <ImageView
                    android:id="@+id/imagetwo"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/imageone"
                    android:src="@drawable/secondpics" />

                <ImageView
                    android:id="@+id/imagethree"
                    android:layout_width="wrap_content"
                    android:layout_height="107dp"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/imagetwo"
                    android:src="@drawable/thirdpics" />

                <ImageView
                    android:id="@+id/imagefour"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imageone"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/fourthpics" />

                <ImageView
                    android:id="@+id/imagefive"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imagetwo"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/imageone"
                    android:src="@drawable/fifthpics" />

                <ImageView
                    android:id="@+id/imagesix"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imagethree"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/imagefive"
                    android:src="@drawable/sixthpics" />

                <ImageView
                    android:id="@+id/imageseven"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imagefour"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/seventhpics" />

                <ImageView
                    android:id="@+id/imageEigth"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imagefive"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/imageseven"
                    android:src="@drawable/eigthpics" />

                <ImageView
                    android:id="@+id/imagenine"
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_below="@id/imagesix"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/imageEigth"
                    android:src="@drawable/ninthpics" />

                <Button
                    android:id="@+id/lastButton"
                    android:layout_width="343dp"
                    android:layout_height="52dp"
                    android:layout_below="@id/imageEigth"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/roboto_black"
                    android:gravity="center"
                    android:text="SEE MORE"
                    android:textColor="@color/black" />

                <!-- Below is the switch for changing to Dark mode -->



            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>